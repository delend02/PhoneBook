            <li><a href="#3">Добавить</a>
        </ul>
    </nav>
    <main>
        <article>
            <header>
                <h1>Телефонная книга</h1>
            </header>
            <section>
                @RenderBody()
            </section>
            <hr>
            <footer>
              <p>© 2022 Токарев Максим</p>
            </footer>
        </article>
    </main>
</body>
</html>
