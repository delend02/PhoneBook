<body>
    <input type="checkbox" id="nav-toggle" hidden>
    <nav class="nav">
        <label for="nav-toggle" class="nav-toggle"></label>
        <h2>Меню</h2>
        <ul>
            <li><a asp-area="" asp-controller="Home" asp-action="Table">Контакты</a>
