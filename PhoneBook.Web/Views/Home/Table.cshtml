@using PhoneBook.Domain.Entity
@using PhoneBook.Web.Models

@model List<TelephoneBook>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Контакты";
}

<div>
    @if (@Model is not null)
    {
    <p>Всего контактов: @Model.Count</p>
    <table class="table">
    <thead>
    <tr>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Номер телефона</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {                  
            <tr>
                <td>@item.LastName</td>
                <td>@item.FirstName</td>
                <td><a asp-area="" asp-controller="Home" asp-action="About" asp-route-id="@item.ID">@item.NumberPhone</a></td>
            </tr>
        }
    </tbody>
        </table>
    }
    else
    {
        <p>Нет данных</p>
    }

</div>
