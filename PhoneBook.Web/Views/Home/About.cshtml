@using PhoneBook.Domain.Entity
@using PhoneBook.Web.Models

@model TelephoneBook
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Описание";
}

@if(Model is null)
{
    <p>Контакт не найден</p>
}
else
{
    <div class="section-name">
        <h1 class="names-h1">@Model.LastName @Model.FirstName @Model.SurName</h1>
        <form asp-controller="Home" asp-action="AboutDelete" asp-route-id="@Model.ID">
            <button type="submit" class="btn">Удалить</button>
        </form>
    </div>
    <div class="section-about">
        <h3>Адрес</h3>
        @Model.Address
        <hr class="line">
        <h3>Номер телефона</h3>
        @Model.NumberPhone
    </div>
}